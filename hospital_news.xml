<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:background="#CC948D"
    android:layout_margin="10dp"
    android:id="@+id/linearlayout"
    android:orientation="vertical"
    android:layout_height="wrap_content">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Writer name"
        android:textColor="#AE1A45"
        android:textColorHint="#AE1A45"
        android:id="@+id/tv_writernews"
        android:padding="2dp"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_news"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/admin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Write Comment ..."
            android:textColor="#747171"
            android:textColorHint="#747171"
            android:id="@+id/tv_news"
            android:padding="2dp"
            android:background="#d6ffcab8"
            android:textSize="16dp"
            android:textStyle="italic"
            android:layout_marginTop="0dp"
            />


    </LinearLayout>
</LinearLayout>