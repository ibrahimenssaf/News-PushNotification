<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cute"
    tools:context="com.example.user.gridl_cardview.PushActivity">


    <ImageView
        android:id="@+id/iv_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="16dp"
        android:onClick="capture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notification" />

    <EditText
        android:id="@+id/et_pushname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:textColorHint="@color/input"
        android:textColor="@color/input"
        android:inputType="textPersonName"
        android:hint="insert your writer name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_push" />

    <EditText
        android:id="@+id/et_pushnews"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="10dp"
        android:background="@color/input"
        android:ems="10"
        android:gravity="top|left"
        android:hint="insert your news"
        android:inputType="textPersonName"
        android:textColor="@color/cute"
        android:textColorHint="@color/cute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_push" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="4dp"
        android:text="Push your News"
        android:id="@+id/bushbtn"
        android:textColor="@color/input"
        android:onClick="upload"
        android:background="@drawable/border_button"
        />
</LinearLayout>
